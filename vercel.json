{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/build/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/build/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "/build/manifest.json"
    },
    {
      "src": "^/asset-manifest.json",
      "dest": "/build/asset-manifest.json"
    },
    {
      "src": "^/(.*).png",
      "dest": "/build/$1.png"
    },
    {
      "src": "^/(.*).js",
      "dest": "/build/$1.js"
    },
    {
      "src": "^/(.*).css",
      "dest": "/build/$1.css"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ]
}